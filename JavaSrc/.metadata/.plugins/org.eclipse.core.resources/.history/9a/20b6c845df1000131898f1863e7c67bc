import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.*;


public class LandmarkGenerator extends JFrame implements ActionListener{

	static PicturePanel FixedPicture;
	static PicturePanel MovingPicture;
	static JMenuItem open,open2;
	//static LandmarkGenerator JP = 
	
	
	public LandmarkGenerator(int r, int c){
		super("Lanmark Generator");
		JFrame holdall = new JFrame();
		holdall.setLayout(new BorderLayout());
		JPanel holdpics=new JPanel();//make panel
		holdpics.setLayout(new GridLayout(r,c));
		JPanel Landmarks = new JPanel();
		Landmarks.setLayout(new GridLayout(2,1));
		JEditorPane DisplayedLandmarks = new JEditorPane();
		int [][] PointsforLandmarks= new int [100][100];
		JButton makeLandmarks = new JButton("Create Landmarks");
		
		Landmarks.setPreferredSize(new Dimension(200, 1000));
        Landmarks.setMaximumSize(Landmarks.getPreferredSize()); 
        Landmarks.setMinimumSize(Landmarks.getPreferredSize());
		
		FixedPicture = new PicturePanel();
		MovingPicture = new PicturePanel();
		JScrollPane scroll1 = new JScrollPane(FixedPicture);//declares it
		JScrollPane scroll2 = new JScrollPane(MovingPicture);//declares it
		
		Landmarks.add(makeLandmarks);
		Landmarks.add(DisplayedLandmarks);
		
		holdpics.add(scroll1);
		holdpics.add(scroll2);
		holdall.add(holdpics,BorderLayout.WEST);
		holdall.add(Landmarks,BorderLayout.EAST);
		this.add(holdall);
		
		makeMenu();
		
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setVisible(true);
		this.setSize(1600,1000);

	}

	public static void main(String[] args) throws IOException {
		//JFrame JP = new JFrame();
		//JP.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		new LandmarkGenerator(1,3);
		
}

	private void makeMenu(){
		JMenuBar bar = new JMenuBar();
		JMenu file = new JMenu("File");
		open = new JMenuItem("Open 1st Image");
		open2 = new JMenuItem("Open 2nd Image");
		open.addActionListener(this);
		open2.addActionListener(this);
		file.add(open);
		file.add(open2);
		bar.add(file);
		this.setJMenuBar(bar);
	//this.add(bar);


	}

	public void actionPerformed(ActionEvent e) {
		System.out.println("HELLO");
		if(e.getSource()==open){
			JFileChooser jfc = new JFileChooser();
			int result = jfc.showOpenDialog(this);
			if(result == JFileChooser.CANCEL_OPTION)
				return;
			File f = jfc.getSelectedFile();
			FixedPicture.setImage(f);
			this.repaint();
		}
		if(e.getSource()==open2){
			JFileChooser jfc = new JFileChooser();
			int result = jfc.showOpenDialog(this);
			if(result == JFileChooser.CANCEL_OPTION)
				return;
			File f = jfc.getSelectedFile();
			MovingPicture.setImage(f);
			this.repaint();
		}
	}
}
